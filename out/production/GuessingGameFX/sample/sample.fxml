<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Please guess a number between 1 and 10:"
          fx:id="greetingText"
          GridPane.columnSpan="15"
          GridPane.rowIndex="0"></Text>

    <TextField text=""
               fx:id="userGuess"
               GridPane.rowIndex="1"></TextField>

    <Button text="Enter"
            fx:id="enterButton"
            onAction="#clickedEnterButton"
            GridPane.rowIndex="2"></Button>

    <Text text=""
          fx:id="numberOfGuesses"
          GridPane.rowIndex="3"></Text>

    <Button text="New Game"
            fx:id="restartButton"
            onAction="#clickedRestartButton"
            GridPane.rowIndex="4"></Button>



















</GridPane>